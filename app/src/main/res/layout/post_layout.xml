<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    app:cardElevation="5dp"
    android:layout_marginTop="12dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/linear1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:padding="5dp"
                android:src="@drawable/man"
                android:id="@+id/user_profile_image_search"
                android:layout_width="60dp"
                android:layout_height="60dp"/>

            <TextView
                android:id="@+id/user_name_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/user_name"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="14dp"
                android:layout_marginTop="10dp"
                android:textColor="#000000"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/post_image_home"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:scaleType="centerCrop"
            android:layout_marginTop="5dp"
            android:src="@drawable/ic_beach"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/post_image_likebtn"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/ic_heart"
                android:padding="3dp"
                android:layout_marginStart="5dp"/>
            
            <ImageView
                android:src="@drawable/ic_comment"
                android:id="@+id/post_image_comment_btn"
                android:layout_toEndOf="@id/post_image_likebtn"
                android:layout_width="40dp"
                android:layout_height="34dp"
                android:layout_marginTop="2dp"
                android:layout_marginStart="6dp"
                android:padding="3dp"/>

            <ImageView
                android:id="@+id/post_image_save_btn"
                android:layout_width="40dp"
                android:layout_height="39dp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="10dp"
                android:src="@drawable/ic_save_file_option"
                android:padding="5dp" />

        </RelativeLayout>

        <TextView
            android:text="0 Likes"
            android:id="@+id/likes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_marginEnd="10dp"/>

<!--        <TextView-->
<!--            android:id="@+id/publisher"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_marginStart="10dp"-->
<!--            android:layout_marginEnd="10dp"-->
<!--            android:textSize="15sp"-->
<!--            android:textColor="#000000"/>-->

        <TextView
            android:text="0 Comments"
            android:id="@+id/comments"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            android:textSize="16sp"
            android:layout_marginBottom="5dp"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/post_description_home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="15"
            android:textColor="#000000"
            android:layout_marginTop="5dp"
            android:layout_marginStart="14dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="7dp"
            android:textStyle="bold"/>


    </LinearLayout>



</androidx.cardview.widget.CardView>