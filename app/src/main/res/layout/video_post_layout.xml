<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    app:cardElevation="5dp"
    android:layout_marginTop="12dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/linear1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:padding="5dp"
                android:src="@drawable/man"
                android:id="@+id/user_profile_image_search"
                android:layout_width="60dp"
                android:layout_height="60dp"/>

            <TextView
                android:id="@+id/user_name_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/user_name"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="14dp"
                android:layout_marginTop="10dp"
                android:textColor="#000000"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/mcButton"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic___dots"
                    android:layout_alignParentEnd="true"/>

            </RelativeLayout>

            <VideoView
                android:id="@+id/post_video_home"
                android:layout_width="350dp"
                android:layout_height="220dp"
                android:layout_marginTop="5dp"
                android:layout_marginStart="30dp"/>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/video_likeBtn"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/ic_heart"
                android:padding="3dp"
                android:layout_marginStart="5dp"/>

            <ImageView
                android:src="@drawable/ic_comment"
                android:id="@+id/post_image_comment_btn"
                android:layout_toEndOf="@id/video_likeBtn"
                android:layout_width="40dp"
                android:layout_height="34dp"
                android:layout_marginTop="2dp"
                android:layout_marginStart="6dp"
                android:padding="3dp"/>

            <ImageView
                android:id="@+id/play_btn"
                android:src="@drawable/ic_pause"
                android:layout_marginTop="4dp"
                android:layout_marginStart="180dp"
                android:layout_width="25dp"
                android:layout_height="25dp"/>

            <ImageView
                android:id="@+id/post_image_save_btn"
                android:layout_width="40dp"
                android:layout_height="39dp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="40dp"
                android:src="@drawable/ic_save_file_option"
                android:padding="5dp" />

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/videoAnimLoading"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10dp"/>

        </RelativeLayout>

        <TextView
            android:text="0 Likes"
            android:id="@+id/video_likes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_marginEnd="10dp"/>

        <TextView
            android:text="@string/view_all_comments"
            android:id="@+id/comments"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            android:textSize="16sp"
            android:layout_marginBottom="5dp"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/post_description_home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="15"
            android:textColor="#000000"
            android:layout_marginTop="5dp"
            android:layout_marginStart="14dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="7dp"
            android:textSize="17sp"/>


    </LinearLayout>

</androidx.cardview.widget.CardView>